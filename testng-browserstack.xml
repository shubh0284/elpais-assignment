        <parameter name="runLocal" value="false"/>
        <classes>
            <class name="com.browserstack.elpais_assignment.tests.ElPaisTest"/>
        </classes>
    </test>

    <!-- ================= MOBILE TESTS ================= -->

    <test name="Android_Chrome">
        <parameter name="browser" value="chrome"/>

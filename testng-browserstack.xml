            <class name="com.browserstack.elpais_assignment.tests.ElPaisTest"/>
        </classes>
    </test>

    <test name="Firefox_Windows">
        <parameter name="browser" value="firefox"/>
        <parameter name="browserVersion" value="latest"/>
